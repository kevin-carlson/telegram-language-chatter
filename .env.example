# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram User ID (for daily messages)
TELEGRAM_USER_ID=your_telegram_user_id

# AI Provider Configuration
# Options: "openai" or "gemini"
AI_PROVIDER=gemini

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Gemini Configuration (if using Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
# For TTS - uses Gemini 2.5 Pro Preview TTS
GEMINI_TTS_MODEL=gemini-2.5-pro-preview-tts

# Language Learning Configuration
TARGET_LANGUAGE=Taiwanese Mandarin
NATIVE_LANGUAGE=English
# Learning level: beginner, intermediate, advanced
LEARNING_LEVEL=beginner

# Response Delay Configuration (in seconds)
# Responses will be delayed randomly between min and max
RESPONSE_DELAY_MIN=60
RESPONSE_DELAY_MAX=3600

# Daily Word Schedule (cron format - default: 9:00 AM)
DAILY_WORD_CRON=0 9 * * *
# Timezone for daily word schedule
TIMEZONE=America/New_York

# MySQL Database Configuration (Optional)
# Set USE_DATABASE=true to enable MySQL storage
USE_DATABASE=false
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=language_bot
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=language_chatter

# Reference Materials Directory
REFERENCE_MATERIALS_DIR=./reference-materials

# Debug Mode
DEBUG=false
